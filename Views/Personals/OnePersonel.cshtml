
@{
    ViewBag.Title = "OnePersonel";
}

<h2>OnePersonel</h2>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>

Personal Id <input type="text" id="personalId" />
<input type="button" id="personalSearch" value="Personal Search"/>
<div id="personal"></div>

<script>

    $(document).ready(function () {
        $("#personalSearch").click(function () {
            $.getJSON('../api/personal/' + $("#personalId").val())
                .done(function (data) {
                    $('#personal').html(data.Name + " " + data.Surname);
                })
        })
    })

</script>